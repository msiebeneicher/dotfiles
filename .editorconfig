root                        = true

[*]
charset                     = utf-8
end_of_line                 = lf
indent_size                 = 4
indent_style                = space
insert_final_newline        = true
max_line_length             = off
tab_width                   = 4
trim_trailing_whitespace    = true

[*.go]
indent_style                = tab

[{*.bat,*.ps1,*.vb}]
end_of_line                 = CRLF

[{.gitconfig,Makefile}]
indent_style                = tab

[{*.tf,*.hcl,*.yml,*.yaml}]
indent_size                 = 2

[.stCommitMsg]
insert_final_newline        = false
