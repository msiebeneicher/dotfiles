root                        = true

[*]
charset                     = utf-8
end_of_line                 = lf
indent_size                 = 4
indent_style                = space
insert_final_newline        = true
max_line_length             = off
tab_width                   = 4
trim_trailing_whitespace    = true

[{*.bat,*.ps1,*.vb}]
end_of_line                 = CRLF

[Makefile]
indent_style                = tab
